<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">
<LinearLayout
    android:id="@+id/layout_order_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
     >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <teste.com.commerce.SquareImageView
            android:id="@+id/grid_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cell1"

             />

        <TextView
            android:id="@+id/text_view_order_item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#44000000"
            android:text="$8888.88"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />



    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_order_item_product_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:textStyle="bold"

        android:textSize="12sp"
        android:layout_weight="3"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"

        android:text="@+id/label"
        android:textColor="#000000"
        />

</LinearLayout>
    </android.support.v7.widget.CardView>